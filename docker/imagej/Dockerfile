# Get Linux
FROM maven:3.8.6-jdk-11-slim

# Copy the source
COPY . /bfio_src

# Install Python
RUN apt update && \
    apt install software-properties-common -y && \
    add-apt-repository ppa:deadsnakes/ppa && \
    apt install python3.9 python3.9-distutils curl -y && \
    curl https://bootstrap.pypa.io/get-pip.py -o get-pip.py && \
    python3.9 get-pip.py && \
    apt install qemu-user-static -y && \
    apt autoremove -y && \
    rm -rf /var/lib/apt/lists/*

RUN ln -sf /usr/bin/python3.9 /usr/bin/python3

# Install
RUN pip3 install /bfio_src --no-cache-dir && \
    rm -rf /bfio_src

# Install packages
ENV LIBRARY_PATH=/lib:/usr/lib
RUN pip3 install cython --no-cache-dir && \
    pip3 install pyimagej==1.4.1 --no-cache-dir

# Polus platform file extension
ENV POLUS_EXT=".ome.tif"

# Container log level
ENV POLUS_LOG="INFO"

# Data and code directories
ENV EXEC_DIR="/opt/executables"
ENV DATA_DIR="/data"

RUN mkdir ${EXEC_DIR} && \
    mkdir ${DATA_DIR}

RUN python3 -c 'import imagej; ij = imagej.init(); print(ij.getVersion())'

RUN rm -rf ~/.m2
